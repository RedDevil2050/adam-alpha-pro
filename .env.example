# Zion Market Analysis Platform - Environment Configuration
# Rename this file to .env and fill in your actual API keys

# Security Settings
ZION_JWT_SECRET_KEY=your-secure-jwt-secret-here

# Database Settings
ZION_DATABASE_URL=sqlite+aiosqlite:///./zion.db

# Redis Settings
ZION_REDIS_URL=redis://localhost:6379/0
ZION_REDIS_HOST=localhost

# API Keys for Data Providers (at least one required for real-world operation)
ZION_ALPHA_VANTAGE_KEY=your-alphavantage-api-key
ZION_POLYGON_API_KEY=your-polygon-api-key
ZION_FINNHUB_API_KEY=your-finnhub-api-key
ZION_YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
# Optional API Keys for additional data sources
ZION_TIINGO_API_KEY=your-tiingo-api-key
ZION_QUANDL_API_KEY=your-quandl-api-key
ZION_IEX_CLOUD_API_KEY=your-iex-cloud-api-key
ZION_MARKETSTACK_API_KEY=your-marketstack-api-key

# Monitoring Settings
ZION_SLACK_WEBHOOK_URL=your-slack-webhook-url
ZION_EMAIL_NOTIFICATIONS=your-email@example.com
ZION_METRICS_PORT=9090
ZION_LOG_LEVEL=INFO

# Application Settings
ZION_BRAIN_SMOOTHING_WINDOW=10
ZION_AGENT_CACHE_TTL=300