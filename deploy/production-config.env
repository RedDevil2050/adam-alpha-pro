# Zion Market Analysis Platform - Production Configuration

# Environment
ENV=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/ziondb
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_TOKEN_EXPIRATION=86400
JWT_ALGORITHM=HS256

# API Keys (ensure these are set in the environment or secrets manager)
# ALPHA_VANTAGE_KEY=
# POLYGON_API_KEY=
# FINNHUB_API_KEY=
# YAHOO_FINANCE_API_KEY=
# TIINGO_API_KEY=
# QUANDL_API_KEY=
# IEX_CLOUD_API_KEY=
# MARKETSTACK_API_KEY=

# Data Provider Settings
PRIMARY_PROVIDER=yahoo_finance
CACHE_TTL=3600
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=2.0
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300
MARKET_INDEX_SYMBOL=^GSPC
RISK_FREE_RATE=0.03

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
