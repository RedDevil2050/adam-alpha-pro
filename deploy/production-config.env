# Environment Settings
ENV=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security Settings
JWT_SECRET_KEY=your-secure-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRATION=3600

# Database Settings
DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Data Provider Settings
PRIMARY_PROVIDER=alpha_vantage
CACHE_TTL=3600
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=2.0
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# API Keys for Data Providers
ALPHA_VANTAGE_KEY=your-alpha-vantage-key-here
POLYGON_API_KEY=your-polygon-api-key-here
FINNHUB_API_KEY=your-finnhub-api-key-here

# Risk Management
MAX_POSITION_SIZE=100000
STOP_LOSS_PERCENTAGE=2
DAILY_LOSS_LIMIT=5000

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/var/log/zion/app.log

# Monitoring Settings
METRICS_PORT=9090
ALERT_EMAIL=alerts@yourdomain.com

# Trading Configuration
MAX_POSITIONS=10
RATE_LIMIT=300
ALLOWED_PAIRS=BTC/USD,ETH/USD,BNB/USD
