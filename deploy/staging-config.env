# Staging Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5433  # Updated to match new staging port
DB_NAME=zion_staging
DB_USER=zion_staging
DB_PASSWORD=staging_pass

# Market Data Settings
ALLOWED_PAIRS=TCS,INFY,RELIANCE  # Limited subset for testing
PRIMARY_PROVIDER=yahoo_finance
FALLBACK_PROVIDERS=alpha_vantage,web_scraper
MARKET_INDEX_SYMBOL=^NSEI

# API Rate Limits
CACHE_TTL=3600
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=2.0
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# Non-Peak Hours Schedule (IST)
MARKET_HOURS_START=16:00  # 4 PM IST
MARKET_HOURS_END=08:30    # 8:30 AM IST next day

# Monitoring Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
API_LATENCY_THRESHOLD=2000  # ms
ERROR_RATE_THRESHOLD=0.05   # 5% error rate

# Alert Configuration
SLACK_WEBHOOK_URL=your-webhook-url
EMAIL_NOTIFICATIONS=alerts@yourdomain.com
ALERT_LEVELS=high,medium
METRICS_PORT=9090
LOG_LEVEL=INFO