# Production Environment Configuration

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=zion_production
DB_USER=zion_production
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://redis:6379

# Market Data Settings
ALLOWED_PAIRS=TCS,INFY,RELIANCE,HDFC,ITC,SBIN
PRIMARY_PROVIDER=yahoo_finance
FALLBACK_PROVIDERS='["alpha_vantage", "web_scraper"]'
MARKET_INDEX_SYMBOL=^NSEI

# API Rate Limits
CACHE_TTL=7200
REQUEST_TIMEOUT=15
MAX_RETRIES=5
RETRY_BACKOFF=1.5
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=600

# Non-Peak Hours Schedule (IST)
MARKET_HOURS_START=16:00  # 4 PM IST
MARKET_HOURS_END=08:30    # 8:30 AM IST next day

# Monitoring Thresholds
CPU_THRESHOLD=70
MEMORY_THRESHOLD=75
API_LATENCY_THRESHOLD=1000  # ms
ERROR_RATE_THRESHOLD=0.02   # 2% error rate

# Alert Configuration
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_NOTIFICATIONS=${ALERT_EMAIL}
ALERT_LEVELS=high,medium,low
METRICS_PORT=9090
LOG_LEVEL=INFO